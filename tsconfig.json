{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "es5",
    "declarationMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "lib": [
      "es2018",
      "dom",
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
}